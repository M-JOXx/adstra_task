@using adstra_task.ViewModels;
@model IEnumerable<UsersViewModel> 

@{
    string CUserId = UserManager.GetUserId(User);

    ViewData["Title"] = "Index";
}


<p>
    <a class="btn btn-primary" asp-action="CreateRole">Create Role</a>
</p>

@if(Model.Any()){
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th><th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                <a asp-action="ManageRoles" asp-route-Id="@item.Id" asp-route-userId="@CUserId">Edit</a> |
                <a asp-controller="Account" asp-action="Profile" asp-route-id="@item.Id">Profile</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
}
else{
    <div class="m-auto">
        <p>No Data!</p>
    </div>
}